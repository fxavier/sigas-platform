  responsavelPelaVerificacaoId   String
  subprojectoId                  String
  consultaEngajamento            String?
  accoesRecomendadas             String?
  resultadoTriagemId             String
  createdAt                      DateTime                                      @default(now())
  updatedAt                      DateTime                                      @updatedAt
  tenantId                       String
