  tenantId                     String
  identificacaoAvaliacaoRiscos IdentificacaoAvaliacaoDeRiscosImapctosAmbientaisSociais[]
  tenant                       Tenant                                                    @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@map("riscos_impactos")
}

